generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
  binaryTargets   = ["native", "windows", "debian-openssl-3.0.x"]
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public"]
}

model User {
  id                      Int           @id @default(autoincrement())
  full_name               String
  phone_number            String        @unique
  password                String?
  apartment_no            String?
  apartment_id            Int?          // <-- EKLENDİ
  created_at              DateTime      @default(now())
  updated_at              DateTime      @updatedAt
  siteId                  Int
  code_expiry             DateTime?
  phone_verification_code String?
  account_status          AccountStatus @default(ACTIVE)
  deleted_at              DateTime?
  last_login              DateTime?
  plates                  String?
  resident_type           ResidentType?
  block_id                Int?
  is_password_set         Boolean       @default(false)
  reset_code              String?
  reset_code_expiry       DateTime?
  complaints              complaints[]
  payments                payments[]
  blocks                  blocks?       @relation(fields: [block_id], references: [id])
  apartments              apartments?   @relation(fields: [apartment_id], references: [id]) // <-- EKLENDİ
  site                    Site          @relation(fields: [siteId], references: [id])
  monthlyDues             monthlyDues[] @relation("monthlyDues")
  monthlyDues_paid_by     monthlyDues[] @relation("monthlyDues_paid_by")

  @@map("users")
  @@schema("public")
}

model Admin {
  id                Int                @id @default(autoincrement())
  full_name         String
  email             String             @unique
  password          String
  account_type      AccountType
  company_name      String?
  created_at        DateTime           @default(now())
  updated_at        DateTime           @updatedAt
  tokenExpiry       DateTime?
  verificationToken String?            @unique
  is_verified       Boolean            @default(false)
  resetToken        String?
  resetTokenExpiry  DateTime?
  account_status    AccountStatus      @default(ACTIVE)
  deleted_at        DateTime?
  last_login        DateTime?
  company_code      String?
  companyId         Int?
  individualId      Int?
  company           companies?         @relation(fields: [companyId], references: [id])
  company_employees company_employees?
  individual        individuals?
  sites_created     Site[]
  adminComplaints AdminComplaint[]

  @@map("admins")
  @@schema("public")
}

model Site {
  id                   Int                    @id @default(autoincrement())
  site_id              String                 @unique
  site_name            String
  site_address         String
  created_at           DateTime               @default(now())
  updated_at           DateTime               @updatedAt
  adminId              Int?
  apartment_count      Int?
  block_count          Int?
  company_id           Int?
  deleted_at           DateTime?
  site_status          AccountStatus          @default(ACTIVE)
  announcements        announcements[]
  blocks               blocks[]
  complaints           complaints[]
  employee_site_access employee_site_access[]
  individual_id        Int?
  individual          individuals?
  admin                Admin?                 @relation(fields: [adminId], references: [id])
  companies            companies?             @relation(fields: [company_id], references: [id])
  socialAmenities      SocialAmenity[]
  users                User[]
  monthlyDues          monthlyDues[]          @relation("monthlyDues")

  @@map("sites")
  @@schema("public")
}

model apartments {
  id              Int       @id @default(autoincrement())
  apartment_no    String
  block_id        Int
  resident_count  Int       @default(0)
  is_occupied     Boolean   @default(false)
  created_at      DateTime  @default(now())
  updated_at      DateTime  @default(now()) @updatedAt
  deleted_at      DateTime?
  blocks          blocks    @relation(fields: [block_id], references: [id], onDelete: Cascade)
  users           User[]
  monthlyDues     monthlyDues[]

  @@unique([block_id, apartment_no])
  @@schema("public")
}

model SocialAmenity {
  id          String   @id @default(cuid())
  siteId      Int
  name        String
  description String?
  status      String   @default("Açık")
  hours       String?
  rules       String?
  extra       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  site        Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@map("social_amenities")
  @@schema("public")
}

model announcements {
  id         Int      @id @default(autoincrement())
  title      String
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt   // <-- GÜNCELLENDİ
  siteId     Int
  start_date DateTime
  end_date   DateTime
  sites      Site     @relation(fields: [siteId], references: [id], onDelete: Cascade, map: "Announcements_siteId_fkey")

  @@schema("public")
}

model blocks {
  id              Int       @id @default(autoincrement())
  block_name      String
  site_id         Int
  created_at      DateTime  @default(now())
  block_number    Int?
  deleted_at      DateTime?
  updated_at      DateTime  @default(now()) @updatedAt
  apartment_count Int?
  resident_count  Int?
  sites           Site      @relation(fields: [site_id], references: [id], onDelete: Cascade)
  users           User[]
  apartments      apartments[]   // <-- EKLENDİ

  @@unique([site_id, block_name])
  @@schema("public")
}
model companies {
  id                Int                 @id @default(autoincrement())
  company_name      String
  company_code      String              @unique
  account_status    AccountStatus       @default(ACTIVE)
  created_at        DateTime            @default(now())
  updated_at        DateTime            @updatedAt
  deleted_at        DateTime?
  expiry_date       DateTime?
  admins            Admin[]
  company_employees company_employees[]
  invitations       invitations[]
  sites             Site[]

  @@schema("public")
}

model individuals {
  id             Int           @id @default(autoincrement())
  site_id        Int?          @unique
  admin_id       Int?          @unique
  account_status AccountStatus @default(ACTIVE)
  created_at     DateTime      @default(now())
  updated_at     DateTime      @updatedAt
  deleted_at     DateTime?
  expiry_date    DateTime?
  admin          Admin?        @relation(fields: [admin_id], references: [id])
  site           Site?         @relation(fields: [site_id], references: [id])

  @@map("individuals")
  @@schema("public")
}

model company_employees {
  id                   Int                    @id @default(autoincrement())
  admin_id             Int                    @unique
  company_id           Int
  joined_at            DateTime               @default(now())
  status               AccountStatus          @default(ACTIVE)
  deleted_at           DateTime?              // Zaten uygun
  admins               Admin                  @relation(fields: [admin_id], references: [id])
  companies            companies              @relation(fields: [company_id], references: [id])
  employee_site_access employee_site_access[]

  @@schema("public")
}

model complaints {
  id         Int       @id @default(autoincrement())
  title      String
  content    String
  status     Status    @default(PENDING)
  siteId     Int
  userId     Int
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt   // <-- GÜNCELLENDİ
  category   Category? @default(MAINTENANCE)
  sites      Site      @relation(fields: [siteId], references: [id], onDelete: Cascade)
  users      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@schema("public")
}

model employee_site_access {
  id                Int               @id @default(autoincrement())
  employee_id       Int
  site_id           Int
  granted_at        DateTime          @default(now())
  deleted_at        DateTime?         // Zaten uygun
  company_employees company_employees @relation(fields: [employee_id], references: [id], onDelete: Cascade)
  sites             Site              @relation(fields: [site_id], references: [id], onDelete: Cascade)

  @@unique([employee_id, site_id])
  @@schema("public")
}

model invitations {
  id            Int              @id @default(autoincrement())
  company_id    Int
  invite_code   String           @unique
  invite_link   String
  invited_email String?
  invited_by    Int
  status        InvitationStatus @default(PENDING)
  expires_at    DateTime
  used_at       DateTime?
  used_by       Int?
  created_at    DateTime         @default(now())
  companies     companies        @relation(fields: [company_id], references: [id], onDelete: Cascade)

  @@schema("public")
}

model payments {
  id             Int           @id @default(autoincrement())
  amount         Float
  payment_date   DateTime
  payment_method PaymentMethod
  description    String?
  created_at     DateTime      @default(now())
  userId         Int
  siteId         Int
  users          User          @relation(fields: [userId], references: [id])

  @@schema("public")
}

model MasterUser {
  id                Int        @id @default(autoincrement())
  email             String     @unique
  password_hash     String
  full_name         String
  master_role       MasterRole @default(DEVELOPER)
  is_active         Boolean    @default(true)
  is_verified       Boolean    @default(false)
  verificationToken String?
  tokenExpiry       DateTime?
  last_login_at     DateTime?
  deleted_at        DateTime?
  created_at        DateTime   @default(now())
  updated_at        DateTime   @updatedAt

  @@map("master_users")
  @@schema("public")
}

enum AccountType {
  INDIVIDUAL
  COMPANY_MANAGER
  COMPANY_EMPLOYEE
  SITE_USER

  @@schema("public")
}

enum AccountStatus {
  ACTIVE
  SUSPENDED
  DELETED

  @@schema("public")
}

enum Category {
  MAINTENANCE
  COMPLAINT
  REQUEST
  OTHER

  @@schema("public")
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  REJECTED

  @@schema("public")
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
  BANK_TRANSFER
  CHECK
  OTHER

  @@schema("public")
}

enum ResidentType {
  OWNER
  HIRER

  @@schema("public")
}

enum Status {
  PENDING
  IN_PROGRESS
  RESOLVED
  REJECTED

  @@schema("public")
}

enum MasterRole {
  MASTER_ADMIN
  DEVELOPER
  PRODUCT_OWNER
  BOOKKEEPER
  SUPPORT
  @@schema("public")
}

model AdminComplaint {
  id           Int         @id @default(autoincrement())
  adminId      Int         @map("admin_id")
  accountType  AccountType @map("account_type")
  title        String
  content      String
  category     AdminComplaintCategory? @default(OTHER)
  status       Status      @default(PENDING)
  created_at   DateTime    @default(now())
  updated_at   DateTime    @updatedAt
  admin        Admin       @relation(fields: [adminId], references: [id])
  master_note  String?
  @@map("admin_complaints")
  @@schema("public")
}

enum AdminComplaintCategory {
  TECHNICAL_SUPPORT
  RESTORE
  REQUEST
  FEATURE_REQUEST
  GENERAL
  OTHER

  @@schema("public")
}

model settings {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
  
  @@schema("public")
}

model monthlyDues {
  id               Int            @id @default(autoincrement())
  userId           Int
  apartmentId      Int?
  siteId           Int
  month            Int
  year             Int
  amount           Float
  due_date         DateTime
  payment_status   PaymentStatus  @default(UNPAID)
  paid_date        DateTime?
  paid_by_user_id  Int?
  payment_method   PaymentMethod?
  created_at       DateTime       @default(now())
  updated_at       DateTime       @updatedAt
  deleted_at       DateTime?

  users            User           @relation("monthlyDues", fields: [userId], references: [id], onDelete: Cascade)
  apartment        apartments?    @relation(fields: [apartmentId], references: [id], onDelete: SetNull)
  paid_by_user     User?          @relation("monthlyDues_paid_by", fields: [paid_by_user_id], references: [id], onDelete: SetNull)
  sites            Site           @relation("monthlyDues", fields: [siteId], references: [id], onDelete: Cascade)

  @@unique([userId, siteId, month, year])
  @@schema("public")
}

enum PaymentStatus {
  UNPAID
  PAID
  OVERDUE

  @@schema("public")
}