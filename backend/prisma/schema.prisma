generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
  binaryTargets   = ["native", "windows", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public"]
}

model User {
  id                      Int           @id @default(autoincrement())
  full_name               String
  phone_number            String        @unique
  password                String?
  apartment_no            String?
  created_at              DateTime      @default(now())
  updated_at              DateTime      @updatedAt
  siteId                  Int
  code_expiry             DateTime?
  phone_verification_code String?
  account_status          AccountStatus @default(ACTIVE)
  deleted_at              DateTime?
  last_login              DateTime?
  plates                  String?
  resident_count          Int?
  resident_type           ResidentType?
  block_id                Int?
  is_password_set         Boolean       @default(false)
  reset_code              String?
  reset_code_expiry       DateTime?
  complaints              complaints[]
  payments                payments[]
  blocks                  blocks?       @relation(fields: [block_id], references: [id])
  site                    Site          @relation(fields: [siteId], references: [id])

  @@map("users")
  @@schema("public")
}

model Admin {
  id                                           Int                @id @default(autoincrement())
  full_name                                    String
  email                                        String             @unique
  password                                     String
  account_type                                 AccountType
  company_name                                 String?
  created_at                                   DateTime           @default(now())
  updated_at                                   DateTime           @updatedAt
  tokenExpiry                                  DateTime?
  verificationToken                            String?            @unique
  is_verified                                  Boolean            @default(false)
  resetToken                                   String?
  resetTokenExpiry                             DateTime?
  account_status                               AccountStatus      @default(ACTIVE)
  deleted_at                                   DateTime?
  last_login                                   DateTime?
  company_code                                 String?
  companyId                                    Int?
  individualId                                 Int?
  admin_complaints                             admin_complaints[]
  company                                      companies?         @relation(fields: [companyId], references: [id])
  individuals_admins_individualIdToindividuals individuals?       @relation("admins_individualIdToindividuals", fields: [individualId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  company_employees                            company_employees?
  individuals_individuals_admin_idToadmins     individuals?       @relation("individuals_admin_idToadmins")
  sites_created                                Site[]

  @@map("admins")
  @@schema("public")
}

model Site {
  id                   Int                    @id @default(autoincrement())
  site_id              String                 @unique
  site_name            String
  site_address         String
  created_at           DateTime               @default(now())
  updated_at           DateTime               @updatedAt
  adminId              Int?
  apartment_count      Int?
  block_count          Int?
  company_id           Int?
  deleted_at           DateTime?
  site_status          AccountStatus          @default(ACTIVE)
  announcements        announcements[]
  blocks               blocks[]
  complaints           complaints[]
  employee_site_access employee_site_access[]
  individuals          individuals?
  admin                Admin?                 @relation(fields: [adminId], references: [id])
  companies            companies?             @relation(fields: [company_id], references: [id])
  socialAmenities      SocialAmenity[]
  users                User[]

  @@map("sites")
  @@schema("public")
}

model SocialAmenity {
  id          String   @id @default(cuid())
  siteId      Int
  name        String
  description String?
  status      String   @default("Açık")
  hours       String?
  rules       String?
  extra       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  site        Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@map("social_amenities")
  @@schema("public")
}

model announcements {
  id         Int      @id @default(autoincrement())
  title      String
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  siteId     Int
  start_date DateTime
  end_date   DateTime
  sites      Site     @relation(fields: [siteId], references: [id], onDelete: Cascade, map: "Announcements_siteId_fkey")

  @@schema("public")
}

model blocks {
  id              Int       @id @default(autoincrement())
  block_name      String
  site_id         Int
  created_at      DateTime  @default(now())
  block_number    Int?
  deleted_at      DateTime?
  updated_at      DateTime  @default(now()) @updatedAt
  apartment_count Int?
  sites           Site      @relation(fields: [site_id], references: [id], onDelete: Cascade)
  users           User[]

  @@unique([site_id, block_name])
  @@schema("public")
}

model companies {
  id                Int                 @id @default(autoincrement())
  company_name      String
  company_code      String              @unique
  account_status    AccountStatus       @default(ACTIVE)
  created_at        DateTime            @default(now())
  updated_at        DateTime
  deleted_at        DateTime?
  expiry_date       DateTime?
  admins            Admin[]
  company_employees company_employees[]
  invitations       invitations[]
  sites             Site[]

  @@schema("public")
}

model company_employees {
  id                   Int                    @id @default(autoincrement())
  admin_id             Int                    @unique
  company_id           Int
  joined_at            DateTime               @default(now())
  status               AccountStatus          @default(ACTIVE)
  deleted_at           DateTime?              @db.Timestamp(6)
  admins               Admin                  @relation(fields: [admin_id], references: [id])
  companies            companies              @relation(fields: [company_id], references: [id])
  employee_site_access employee_site_access[]

  @@schema("public")
}

model complaints {
  id         Int       @id @default(autoincrement())
  title      String
  content    String
  status     Status    @default(PENDING)
  siteId     Int
  userId     Int
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now()) @updatedAt
  category   Category? @default(MAINTENANCE)
  sites      Site      @relation(fields: [siteId], references: [id], onDelete: Cascade)
  users      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@schema("public")
}

model employee_site_access {
  id                Int               @id @default(autoincrement())
  employee_id       Int
  site_id           Int
  granted_at        DateTime          @default(now())
  deleted_at        DateTime?         @db.Timestamp(6)
  company_employees company_employees @relation(fields: [employee_id], references: [id], onDelete: Cascade)
  sites             Site              @relation(fields: [site_id], references: [id], onDelete: Cascade)

  @@unique([employee_id, site_id])
  @@schema("public")
}

model invitations {
  id            Int              @id @default(autoincrement())
  company_id    Int
  invite_code   String           @unique
  invite_link   String
  invited_email String?
  invited_by    Int
  status        InvitationStatus @default(PENDING)
  expires_at    DateTime
  used_at       DateTime?
  used_by       Int?
  created_at    DateTime         @default(now())
  companies     companies        @relation(fields: [company_id], references: [id], onDelete: Cascade)

  @@schema("public")
}

model payments {
  id             Int           @id @default(autoincrement())
  amount         Float
  payment_date   DateTime
  payment_method PaymentMethod
  description    String?
  created_at     DateTime      @default(now())
  userId         Int
  siteId         Int
  users          User          @relation(fields: [userId], references: [id])

  @@schema("public")
}

model MasterUser {
  email             String     @unique
  password_hash     String
  full_name         String
  master_role       MasterRole @default(DEVELOPER)
  is_active         Boolean    @default(true)
  last_login_at     DateTime?
  created_at        DateTime   @default(now())
  updated_at        DateTime   @updatedAt
  id                Int        @id @default(autoincrement())
  is_verified       Boolean    @default(false)
  deleted_at        DateTime?
  tokenExpiry       DateTime?
  verificationToken String?

  @@index([email])
  @@index([is_active])
  @@index([master_role])
  @@map("master_users")
  @@schema("public")
}

model admin_complaints {
  id           Int                     @id @default(autoincrement())
  admin_id     Int
  account_type String                  @db.VarChar(32)
  title        String                  @db.VarChar(255)
  content      String
  status       String                  @default("PENDING") @db.VarChar(32)
  created_at   DateTime?               @default(now()) @db.Timestamptz(6)
  updated_at   DateTime?               @default(now()) @db.Timestamptz(6)
  category     AdminComplaintCategory? @default(OTHER)
  master_note  String?
  admins       Admin                   @relation(fields: [admin_id], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@schema("public")
}

model individuals {
  id                                      Int           @id @default(autoincrement())
  site_id                                 Int?          @unique
  admin_id                                Int           @unique
  account_status                          AccountStatus @default(ACTIVE)
  created_at                              DateTime      @default(now())
  updated_at                              DateTime
  deleted_at                              DateTime?
  expiry_date                             DateTime?
  admins_admins_individualIdToindividuals Admin[]       @relation("admins_individualIdToindividuals")
  admins_individuals_admin_idToadmins     Admin         @relation("individuals_admin_idToadmins", fields: [admin_id], references: [id])
  sites                                   Site?         @relation(fields: [site_id], references: [id])

  @@schema("public")
}

model settings {
  id    Int    @id @default(autoincrement())
  key   String @unique @db.VarChar(64)
  value String @db.VarChar(255)

  @@schema("public")
}

enum AccountType {
  INDIVIDUAL
  COMPANY_MANAGER
  COMPANY_EMPLOYEE
  SITE_USER

  @@schema("public")
}

enum AccountStatus {
  ACTIVE
  SUSPENDED
  DELETED

  @@schema("public")
}

enum Category {
  MAINTENANCE
  COMPLAINT
  REQUEST
  OTHER

  @@schema("public")
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  REJECTED

  @@schema("public")
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
  BANK_TRANSFER
  CHECK
  OTHER

  @@schema("public")
}

enum ResidentType {
  OWNER
  HIRER

  @@schema("public")
}

enum Status {
  PENDING
  IN_PROGRESS
  RESOLVED
  REJECTED

  @@schema("public")
}

enum MasterRole {
  MASTER_ADMIN
  DEVELOPER
  PRODUCT_OWNER
  BOOKKEEPER
  SUPPORT

  @@schema("public")
}

enum AdminComplaintCategory {
  TECHNICAL_SUPPORT
  RESTORE
  REQUEST
  FEATURE_REQUEST
  GENERAL
  OTHER

  @@schema("public")
}
