generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["public"]
}

model Admin {
  id                Int                @id @default(autoincrement())
  full_name         String
  email             String             @unique
  password          String
  account_type      AccountType
  company_name      String?
  created_at        DateTime           @default(now())
  updated_at        DateTime           @updatedAt
  tokenExpiry       DateTime?
  verificationToken String?            @unique
  is_verified       Boolean            @default(false)
  resetToken        String?
  resetTokenExpiry  DateTime?
  account_status    AccountStatus      @default(ACTIVE)
  deleted_at        DateTime?
  last_login        DateTime?
  companies         companies[]
  company_employees company_employees?
  sites_created     Site[]

  @@map("admins")
  @@schema("public")
}

model Site {
  id                   Int                    @id @default(autoincrement())
  site_id              String                 @unique
  site_name            String
  site_address         String
  created_at           DateTime               @default(now())
  updated_at           DateTime               @updatedAt
  adminId              Int?
  apartment_count      Int?
  block_count          Int?
  company_id           Int?
  deleted_at           DateTime?
  site_status          AccountStatus          @default(ACTIVE)
  announcements        Announcement[]
  blocks               blocks[]
  complaints           Complaint[]
  employee_site_access employee_site_access[]
  admin                Admin?                 @relation(fields: [adminId], references: [id])
  companies            companies?             @relation(fields: [company_id], references: [id])
  social_amenities     social_amenities[]
  users                User[]

  @@map("sites")
  @@schema("public")
}

model User {
  id                      Int           @id @default(autoincrement())
  full_name               String
  phone_number            String        @unique
  password                String?
  apartment_no            String?
  created_at              DateTime      @default(now())
  updated_at              DateTime      @updatedAt
  siteId                  Int
  code_expiry             DateTime?
  phone_verification_code String?
  reset_code              String?
  reset_code_expiry       DateTime?
  account_status          AccountStatus @default(ACTIVE)
  deleted_at              DateTime?
  last_login              DateTime?
  plates                  String?
  resident_count          Int?
  resident_type           ResidentType?
  block_id                Int?
  is_password_set         Boolean       @default(false)
  complaints              Complaint[]
  payments                payments[]
  blocks                  blocks?       @relation(fields: [block_id], references: [id])
  site                    Site          @relation(fields: [siteId], references: [id])

  @@map("users")
  @@schema("public")
}

model social_amenities {
  id          String   @id
  siteId      Int
  name        String
  description String?
  status      String   @default("Açık")
  hours       String?
  rules       String?
  extra       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  sites       Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@schema("public")
}

model Announcement {
  id         Int      @id @default(autoincrement())
  title      String
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  siteId     Int
  start_date DateTime
  end_date   DateTime
  site       Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@map("announcements")
  @@schema("public")
}

model Complaint {
  id         Int       @id @default(autoincrement())
  title      String
  content    String
  status     Status    @default(PENDING)
  siteId     Int
  userId     Int
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  category   Category? @default(MAINTENANCE)
  site       Site      @relation(fields: [siteId], references: [id], onDelete: Cascade)
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("complaints")
  @@schema("public")
}

model blocks {
  id         Int      @id @default(autoincrement())
  block_name String
  site_id    Int
  created_at DateTime @default(now())
  sites      Site     @relation(fields: [site_id], references: [id], onDelete: Cascade)
  users      User[]

  @@unique([site_id, block_name])
  @@schema("public")
}

model companies {
  id                Int                 @id @default(autoincrement())
  company_name      String
  company_code      String              @unique
  account_status    AccountStatus       @default(ACTIVE)
  created_at        DateTime            @default(now())
  updated_at        DateTime
  deleted_at        DateTime?
  manager_id        Int
  admins            Admin               @relation(fields: [manager_id], references: [id])
  company_employees company_employees[]
  invitations       invitations[]
  sites             Site[]

  @@schema("public")
}

model company_employees {
  id                   Int                    @id @default(autoincrement())
  admin_id             Int                    @unique
  company_id           Int
  joined_at            DateTime               @default(now())
  status               AccountStatus          @default(ACTIVE)
  admins               Admin                  @relation(fields: [admin_id], references: [id])
  companies            companies              @relation(fields: [company_id], references: [id])
  employee_site_access employee_site_access[]

  @@schema("public")
}

model employee_site_access {
  id                Int               @id @default(autoincrement())
  employee_id       Int
  site_id           Int
  granted_at        DateTime          @default(now())
  company_employees company_employees @relation(fields: [employee_id], references: [id], onDelete: Cascade)
  sites             Site              @relation(fields: [site_id], references: [id], onDelete: Cascade)

  @@unique([employee_id, site_id])
  @@schema("public")
}

model invitations {
  id            Int              @id @default(autoincrement())
  company_id    Int
  invite_code   String           @unique
  invite_link   String
  invited_email String?
  invited_by    Int
  status        InvitationStatus @default(PENDING)
  expires_at    DateTime
  used_at       DateTime?
  used_by       Int?
  created_at    DateTime         @default(now())
  companies     companies        @relation(fields: [company_id], references: [id], onDelete: Cascade)

  @@schema("public")
}

model payments {
  id             Int           @id @default(autoincrement())
  amount         Float
  payment_date   DateTime
  payment_method PaymentMethod
  description    String?
  created_at     DateTime      @default(now())
  userId         Int
  siteId         Int
  users          User          @relation(fields: [userId], references: [id])

  @@schema("public")
}

enum AccountType {
  INDIVIDUAL
  MASTER_ADMIN
  COMPANY_MANAGER
  COMPANY_EMPLOYEE
  SITE_USER

  @@schema("public")
}

enum Category {
  MAINTENANCE
  COMPLAINT
  REQUEST
  OTHER

  @@schema("public")
}

enum Status {
  PENDING
  IN_PROGRESS
  RESOLVED
  REJECTED

  @@schema("public")
}

enum AccountStatus {
  ACTIVE
  SUSPENDED
  DELETED

  @@schema("public")
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  REJECTED

  @@schema("public")
}

enum PaymentMethod {
  CASH
  CREDIT_CARD
  BANK_TRANSFER
  CHECK
  OTHER

  @@schema("public")
}

enum ResidentType {
  OWNER
  HIRER

  @@schema("public")
}
